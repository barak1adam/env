[user]
	name = Barak Adam
	email = barak1adam@gmail.com
[color]
	ui = auto
	diff = auto
[merge]
	tool = diffmerge
[mergetool "diffmerge"]
	cmd = diffmerge --merge\n--result=$MERGED $LOCAL $BASE $REMOTE
	trustExitCode = true
[diff]
	tool = vimdiff
[difftool "diffmerge"]
	cmd = diffmerge $LOCAL $REMOTE
[difftool]
	prompt = false
[alias]
	d = difftool
[core]
	editor = vim -f
	pager = less -F -X
	eol = lf
[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	required = true
[sendemail]
	from = Barak Adam <barak1adam@gmail.com>
	smtpEncryption = tls
	smtpServer = smtp.gmail.com
	smtpUser = barak1adam@gmail.com
	chainreplyto = false
	smtpServerPort = 587
	confirm = auto
[oh-my-zsh]
	hide-status = 0
	hide-dirty = 1
