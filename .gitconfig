[user]
	name = Kosta Zertsekel
	email = zertsekel@gmail.com
[color]
	ui = auto
	diff = auto
[merge]
	tool = diffmerge
[mergetool "diffmerge"]
	cmd = diffmerge --merge\n--result=$MERGED $LOCAL $BASE $REMOTE
	trustExitCode = true
[diff]
	tool = gvimdiff
[difftool "diffmerge"]
	cmd = diffmerge $LOCAL $REMOTE
[difftool]
	prompt = false
[alias]
	d = difftool
[core]
	editor = gvim -f
[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	required = true
[sendemail]
	from = Kosta Zertsekel <zertsekel@gmail.com>
	smtpEncryption = tls
	smtpServer = smtp.gmail.com
	smtpUser = zertsekel@gmail.com
	chainreplyto = false
	smtpServerPort = 587
	confirm = auto
